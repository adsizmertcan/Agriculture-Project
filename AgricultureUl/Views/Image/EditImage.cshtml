@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Düzenle</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(X=>X.ImageID)
                <div class="form-group">
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <label for="exampleInputImage">Görsel Yolu</label>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label for="exampleInputImage">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description">
                </div>
                <button type="submit" class="btn btn-outline-success me-2">Düzenle</button>
            </form>
        </div>
    </div>
</div>

