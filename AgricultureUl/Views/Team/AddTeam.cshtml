@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Takım Arkadaşı Kaydı</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <input type="text" class="form-control" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <label for="exampleInputImage">Görev</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <label for="exampleInputImage">Görsel</label>
                    <input type="text" class="form-control" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputImage">Facebook</label>
                    <input type="text" class="form-control" asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputImage">Instagram</label>
                    <input type="text" class="form-control" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputImage">Twitter</label>
                    <input type="text" class="form-control" asp-for="TwitterUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputImage">Web Sitesi</label>
                    <input type="text" class="form-control" asp-for="WebsiteUrl">
                </div>
                <button type="submit" class="btn btn-outline-success me-2">Ekle</button>
            </form>
        </div>
    </div>
</div>

